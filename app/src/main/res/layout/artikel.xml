<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/red"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:srcCompat="@drawable/logo"
        android:paddingVertical="20dp"
        android:paddingLeft="260dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingHorizontal="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:text="Article Skin Cancer"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="@color/white"
                        android:fontFamily="@font/poppins_light"
                        android:textSize="22dp"
                        android:paddingLeft="25dp"
                        />
                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="12dp"
                    app:cardBackgroundColor="@color/white"
                    android:layout_marginHorizontal="30dp"
                    android:layout_marginVertical="10dp"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/judulartikel1"
                            android:textSize="15sp"
                            android:layout_marginHorizontal="10dp"
                            android:fontFamily="@font/poppins_bold"
                            android:textColor="@color/red"
                            android:paddingVertical="9dp"
                            />

                        <TextView
                            android:text="@string/artikel_teks1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textColor="@color/red"
                            android:layout_marginHorizontal="10dp"
                            android:textSize="12sp"
                            android:paddingVertical="5dp"
                            android:fontFamily="@font/poppins_light"
                            />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="12dp"
                    app:cardBackgroundColor="@color/white"
                    android:layout_marginHorizontal="30dp"
                    android:layout_marginVertical="10dp"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/judulartikel2"
                            android:textSize="15sp"
                            android:layout_marginHorizontal="10dp"
                            android:fontFamily="@font/poppins_bold"
                            android:textColor="@color/red"
                            android:paddingVertical="9dp"
                            />

                        <TextView
                            android:text="@string/artikel_teks2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textColor="@color/red"
                            android:layout_marginHorizontal="10dp"
                            android:textSize="12sp"
                            android:paddingVertical="5dp"
                            android:fontFamily="@font/poppins_light"
                            />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="12dp"
                    app:cardBackgroundColor="@color/white"
                    android:layout_marginHorizontal="30dp"
                    android:layout_marginVertical="10dp"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/judulartikel3"
                            android:textSize="15sp"
                            android:layout_marginHorizontal="10dp"
                            android:fontFamily="@font/poppins_bold"
                            android:textColor="@color/red"
                            android:paddingVertical="9dp"
                            />

                        <TextView
                            android:text="@string/artikel_teks3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textColor="@color/red"
                            android:layout_marginHorizontal="10dp"
                            android:textSize="12sp"
                            android:paddingVertical="5dp"
                            android:fontFamily="@font/poppins_light"
                            />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>